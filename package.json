{
  "name": "http-api-project",
  "version": "1.0.0",
  "engines": {
    "node": "8.6.0"
  },
  "description": "HTTP API II",
  "main": "./src/server.js",
  "repository": "https://github.com/mfasman95/HTTP-API-project.git",
  "author": "Matthew Fasman <matthew.f4sm4n@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn server\" \"yarn client:build\"",
    "start:dev": "concurrently \"nodemon run server\" \"npm run client:dev",
    "nodemon": "nodemon ./src/server.js",
    "pretest": "eslint ./src --fix",
    "server": "node ./src/server.js",
    "client:build": "node build-client.js",
    "client:dev": "node start-client.js",
    "test": "echo \"Tests complete\""
  },
  "dependencies": {
    "concurrently": "^3.5.0",
    "yarn": "^1.2.1"
  },
  "devDependencies": {
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.12.0"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "rules": {
      "no-underscore-dangle": "off",
      "no-plusplus": "off"
    }
  }
}
